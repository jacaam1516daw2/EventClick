extends layout

block content
    .container#init
      .jumbotron
        h1 Bienvenido a #{title}
        p Crea y gestiona tus eventos
        button#add-new.btn.btn-info(type='button') Nuevo Evento
      .row
        h1 Eventos
        ul#listaEventClick
          each eventClick in listaEventClick
           .ev.col-sm-4
               h2= eventClick.title
               h3= eventClick.subtitle
               p= eventClick.description
               p= eventClick.endDate
               button#add-putme.btn.btn-info.col-sm-4(type='button') Apúntame
               button#add-show.btn.btn-info.col-sm-4(type='button') Ver evento
     .container#alta
          #editionPanel.row
             h3 Bienvenido a #{title}
             p Alta de evento
          form(role='form', method='POST' action='/newEvent')
              .form-group
                label() Título
                input#title.form-control(type='text', name='titleForm', placeholder='Campo de texto', value="Título")
              .form-group
                label() Subtítulo
                input#subtitle.form-control(type='text', name='subtitleForm', placeholder='Campo de texto', value="Subtítulo")
              .row
                  .form-group.col-sm-4
                    label(for='archivo') Adjuntar imagen
                    input#fileImage(type='file', name='fileImageForm')
                    p.help-block Que no supere los 2 MB
                  .form-group.col-sm-8
                    label() Fecha de inicio:
                    input#initDate.date(type='text', name='initDateForm', placeholder='DD/MM/YYYY', value="13/05/2016")
                    label()#dateend Fecha final de evento:
                    input#endDate.date(type='text', name='endDateForm', placeholder='DD/MM/YYYY', value="23/05/2016")
              .form-group.row#descript
                label() Explica en que consiste el evento
                textarea#description.form-control(rows='3', name='descriptionForm')
              .form-group
              .checkbox
                label
                  input#isActive(type='checkbox', name='isActiveForm')
                  |  Activar evento
              input#add-newEvent.btn.btn-info(type='submit', value="Crear")
